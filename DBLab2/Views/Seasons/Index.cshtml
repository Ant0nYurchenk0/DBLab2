@model List<DBLab2.Models.Season>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Seasons</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Start date</th>
            <th scope="col">End date</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var season in Model)
        {
            <tr>
                <th scope="row">@season.Id</th>
                <td>@season.Name</td>
                <td>@season.Description</td>
                <td>@season.StartDate</td>
                <td>@season.EndDate</td>
                <td>
                    <a class="btn btn-warning" href="@Url.Action("Edit", "Seasons", new { id = season.Id})">
                        Edit
                    </a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "Seasons", new { id = season.Id})">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" href="@Url.Action("Create", "Seasons")">
    Add new season
</a>
<a class="btn btn-primary" href="@Url.Action("Index", "Home")">
    To main menu
</a>