@model DBLab2.Models.Season
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model == null || Model.Id == 0)
{

    <h2>New Season</h2>
}
else
{
    <h2>Edit Season</h2>
}
@Html.ValidationSummary()

@using (Html.BeginForm("Save", "Seasons"))
{
    <div class="form-group">
        @Html.LabelFor(s => s.Name)
        @Html.TextBoxFor(s => s.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Description)
        @Html.TextBoxFor(s => s.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.StartDate)
        @Html.TextBoxFor(s => s.StartDate, "{0:dd/MM/yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.StartDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.EndDate)
        @Html.TextBoxFor(s => s.EndDate, "{0:dd/MM/yyyy}", new { @class = "form-control date" })
        @Html.ValidationMessageFor(s => s.EndDate)
    </div>
    @Html.HiddenFor(s => s.Id)
    @Html.AntiForgeryToken();
    <button type="submit" class="btn btn-success">Save</button>
    <a class="btn btn-primary" href="@Url.Action("Index", "Seasons")">Cancel</a>
}